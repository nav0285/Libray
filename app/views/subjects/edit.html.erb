<h2> Edit Subject </h2>
<%= form_for(@subject) do |f| %>
 <% if @subject.errors.any? %>
   <ul><% @subject.errors.full_messages.each do |m| %>
   <li><%= m %></li>
   <% end %></ul>
 <% end %>
<%= f.label 'Subject Name' %>
<%= f.text_field :name %>
<%= f.submit 'Save Changes' %>
<% end %>
<%= link_to 'Back', root_url %>