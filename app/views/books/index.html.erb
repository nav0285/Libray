<% if @books.blank? %>
  <p> No Books </p>
<% else %>
   <% @books.each do |book| %>
   <ul><li><p>
   <%= link_to book.title, book %>
   <%= link_to 'Edit', { :action=>'edit', :id=>book.id } %>
   <%= link_to 'Delete', book, method: :delete, confirm: 'Are you sure?' %>
   </p></li></ul>
  <% end %>
<% end %>

<%= link_to 'Back', root_url %>