<h2> Edit book </h2>

<%= form_for(@book) do |f| %>
 <% if @book.errors.any? %>
   <ul><% @book.errors.full_messages.each do |m| %>
   <li><%= m %></li>
   <% end %></ul>
 <% end %>

<table>

<tr><td><b><%= f.label 'Title' %></b></td>
    <td><%= f.text_field :title %></td></tr>

<tr><td><b><%= f.label 'Description' %></b></td>
    <td><%= f.text_field :description %></td></tr>

<tr><td><%= f.submit 'Save Changes' %></td></tr>

</table>
<% end %>

<%= link_to 'Back', books_path %>